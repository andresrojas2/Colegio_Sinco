@model Colegio.Dtos.ProfesorAsignaturaDto

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Asignatura</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MateriaId" class="control-label"></label>
                <select asp-for="MateriaId" class="form-control" asp-items="ViewBag.MateriaId"></select>
                <span asp-validation-for="MateriaId" class="text-danger"></span>
            </div>
            <div class="auto" id="auto" style="display: none">
                <div class="form-group">
                    <label asp-for="ProfesorId" class="control-label"></label>
                    <select asp-for="ProfesorId" class="form-control" asp-items="ViewBag.ProfesorId"></select>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Regresar",
   "Index",
   "ProfesorAsignaturas",
   new { ProfesorId = @ViewData["vwProfesorId"] })
</div>

